{
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
        {
            "source": "/(.*)\\.(css|js|png|jpg|svg|woff2)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/padres",
            "destination": "/public/padres/login.html"
        },
        {
            "source": "/api/alumnos/(.*)",
            "destination": "/api/alumnos?action=$1"
        },
        {
            "source": "/api/finanzas/(.*)",
            "destination": "/api/finanzas?action=$1"
        },
        {
            "source": "/api/padres/(.*)",
            "destination": "/api/padres?action=$1"
        },
        {
            "source": "/api/pagos/(.*)",
            "destination": "/api/pagos?action=$1"
        },
        {
            "source": "/api/login",
            "destination": "/api/auth?action=login"
        },
        {
            "source": "/api/logout",
            "destination": "/api/auth?action=logout"
        }
    ]
}